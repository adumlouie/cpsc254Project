    <div class="flex-container">
        <div class="form-container">
            <h1>Log Workout</h1>
            <form action="/users/logworkout" method="post">
                <label for="date">Date:</label>
                <input type="date" id="date" name="date"> <br>

                <label for="duration">Duration:</label>
                <input type="text" id="duration" name="duration">

                <div class="type-buttons">
                    <input type="radio" id="strength" name="type" value="strength">
                    <label for="strength">Strength</label>

                    <input type="radio" id="flexibility" name="type" value="flexibility">
                    <label for="flexibility">Flexibility</label>

                    <input type="radio" id="cardio" name="type" value="cardio">
                    <label for="cardio">Cardio</label>
                </div>

                <label for="notes">Notes:</label>
                <textarea id="notes" name="notes"></textarea>

                <input type="submit" value="Submit" class="submit">
        </form>
    </div>  
